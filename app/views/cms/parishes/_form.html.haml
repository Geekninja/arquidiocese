= simple_form_for(@cms_parish) do |f|
  .card-body.card-padding
    .row
      .col-md-12
        = f.label :name, class: 'fg-label'
        = f.input :name, label: false, input_html: { placeholder: 'Digite um titulo' }
    .row
      .col-md-12
        = f.label :content, class: 'fg-label'
        = f.input :content, label: false, input_html: { class: 'redactor' }
    .row
      .col-md-3
        = f.label "Imagem Destaque", as: 'file', class: 'fg-label'
        %br
        %br
        = f.input :thumb, as: 'file', label: false, input_html: { placeholder: 'Selecione' }
        = image_tag @cms_parish.thumb, width: '200' if @cms_parish.thumb?
        %br
        %br
      .col-md-3
        = f.label "Imagem Interna", as: 'file', class: 'fg-label'
        %br
        %br
        = f.input :thumbnail, as: 'file', label: false, input_html: { placeholder: 'Selecione' }
        = image_tag @cms_parish.thumbnail, width: '200' if @cms_parish.thumbnail?
        %br
        %br
      .col-md-2
        .toggle-switch{"data-ts-color" => "blue"}
          %label.ts-label{:for => "ts5"} Publicado
          %br
          %br
          = f.check_box :publish, id: 'ts5',hidden: 'hidden', type: 'checkbox'
          %label.ts-helper{:for => "ts5"}
      .col-md-2
        .toggle-switch{"data-ts-color" => "blue"}
          %label.ts-label{:for => "ts6"} Thumb
          %br
          %br
          = f.check_box :thumbnail_active, id: 'ts6',hidden: 'hidden', type: 'checkbox'
          %label.ts-helper{:for => "ts6"}
    .row
      .col-md-4
        = f.label :phone, class: 'fg-label'
        = f.input :phone, label: false, input_html: { placeholder: 'Digite um titulo' }
      .col-md-4
        = f.label :address, class: 'fg-label'
        = f.input :address, label: false, input_html: { placeholder: 'Digite um titulo' }
      .col-md-4
        = f.label :priest, class: 'fg-label'
        = f.input :priest, label: false, input_html: { placeholder: 'Digite um titulo' }
    .row
      .col-md-12
        = f.label :resume, class: 'fg-label'
        = f.input :resume, label: false, input_html: { class: 'redactor' }
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success'
        = link_to 'Back', cms_parishes_path , class: 'btn btn-danger'
