= simple_form_for(@cms_priest) do |f|
  .card-body.card-padding
    .row
      .col-md-12
        = f.label :title, class: 'fg-label'
        = f.input :title, label: false, input_html: { placeholder: 'Digite um titulo' }
    .row
      .col-md-12
        = f.label :content, class: 'fg-label'
        = f.input :content, label: false, input_html: { class: 'redactor' }
    .row
      .col-md-3
        = f.label "Imagem Interna", as: 'file', class: 'fg-label'
        %br
        %br
        = f.input :thumb, as: 'file', label: false, input_html: { placeholder: 'Selecione' }
        = image_tag @cms_priest.thumb width: '200' if @cms_priest.thumb?
        %br
        %br
      .col-md-2
        .toggle-switch{"data-ts-color" => "blue"}
          %label.ts-label{:for => "ts5"} Publicado
          %br
          %br
          = f.check_box :publish, id: 'ts5',hidden: 'hidden', type: 'checkbox'
          %label.ts-helper{:for => "ts5"}
      .col-md-2
        .toggle-switch{"data-ts-color" => "blue"}
          %label.ts-label{:for => "ts6"} Thumb
          %br
          %br
          = f.check_box :thumb_active, id: 'ts6',hidden: 'hidden', type: 'checkbox'
          %label.ts-helper{:for => "ts6"}
      .col-md-2
        = f.label :who, class: 'fg-label'
        = f.input :who, as: 'select', collection: Cms::Priest.whos.keys.to_a, label: false, prompt: 'selecione...'
    .row
      .col-md-12
        = f.label :resume, class: 'fg-label'
        = f.input :resume, label: false, input_html: { class: 'redactor' }
    .row
      .col-md-12
        = f.button :submit, class: 'btn btn-success'
        = link_to 'Back', cms_priests_path , class: 'btn btn-danger'
