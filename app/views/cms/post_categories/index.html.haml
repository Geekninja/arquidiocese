.card
  .card-header.ch-alt
    %h2
      Categorias de Posts
      = link_to 'Nova Categoria', new_cms_post_category_path, class: 'btn btn-success pull-right'
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table
      %thead
        %tr
          %th #
          %th Name
          %th Status
          %th{:colspan => "3"}

      %tbody
        - @cms_post_categories.each_with_index do |cms_post_category, i|
          %tr
            %td= i+1
            %td= cms_post_category.name
            %td= status_helper (cms_post_category.status)
            %td.col-md-2
              = link_to '', edit_cms_post_category_path(cms_post_category), class: 'md md-edit btn btn-primary'
              = link_to '', cms_post_category, class: 'md md-delete btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }
