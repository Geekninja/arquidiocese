= simple_form_for(@cms_post) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :resume
    = f.input :content
    = f.input :date
    = f.input :publish
    = f.input :slider
    = f.input :thumb
    = f.input :thumb_active
    = f.association :post_category

  .form-actions
    = f.button :submit
